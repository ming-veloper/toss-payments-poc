{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": "script",
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "exclude": [
    "./node_modules"
  ]
}